<%= form_with scope: :user, url: users_path, local: true do |form| %>
<center>
    
    <div class="page-header text-center">
        <h1>Registro</h1>
    </div>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="well well-sm">
                <form class="form-horizontal" method="post">
                    <fieldset>
                          <div class="form-group">
                            <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-user bigicon"></i></span>
                            <div class="col-md-8">
                              <%= form.text_field :name, class: "form-control", placeholder: "nombre..." %> 
                            </div>
                           </div>

                       <div class="form-group">
                            <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-user bigicon"></i></span>
                            <div class="col-md-8">
                                <%=form.text_field :last_name, class: "form-control ", placeholder: "apellido..." %> 
                            </div>
                        </div>

                        <div class="form-group">
                            <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-envelope-o bigicon"></i></span>
                            <div class="col-md-8">
                                <%= form.text_field :count_number, class: "form-control ", placeholder: "numero de cuenta..."%>
                            </div>
                        </div>

                        <div class="form-group">
                            <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-phone-square bigicon"></i></span>
                            <div class="col-md-8">
                                 <%= form.text_field :user_name, class: "form-control", placeholder: "usuario..."%>
                            </div>
                        </div>

                        <div class="form-group">
                            <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-pencil-square-o bigicon"></i></span>
                            <div class="col-md-8">
                               <%= form.password_field :password, class: "form-control ",  placeholder: "contraseña..." %>
                            </div>
                        </div>

                        <div class="form-group">
                            <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-pencil-square-o bigicon"></i></span>
                            <div class="col-md-8">
                                <%= form.password_field :password_2, class: "form-control ",placeholder: "repite la contraseña..."%>
                            </div>
                        </div>

                        <div class="form-group">
                            <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-user bigicon"></i></span>
                            <div class="col-md-8">
                                <%= form.label "Grupo"%>
                                <%=form.select :group,['501','502','503','601','602','603'], class: " btn btn-default dropdown-toggle "%> 
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-12 text-center">
                                <%= form.submit "Aceptar", class: "btn btn-primary"%>
                            </div>
                        </div>
                    </fieldset>
            </div>
        </div>
    </div>
</div>
<% end %>
<% if @user.errors.any?%>
<div class="alert alert-danger">
     <h2>
         <%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:
     </h2>
     <ul><% @user.errors.full_messages.each do |msg| %><li class="text-danger"><%= msg%></li><%end%></ul>
</div>
<%end%>
</center>