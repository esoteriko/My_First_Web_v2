<%= form_with scope: :sessions, url: sessions_new_path, local: true do |form| %>
<center>

  <div class="page-header text-center">
    <h1>Log in</h1>
  </div>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="well well-sm">
        <fieldset>
          
          <div class="form-group">
            <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-user bigicon"></i></span>
            <div class="col-md-8">
              <%= form.text_field :user_name, class: "form-control", placeholder: "Usuario..." %>
            </div>
          </div>

          <div class="form-group">
            <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-user bigicon"></i></span>
            <div class="col-md-8">
              <%= form.password_field :password, class: "form-control", placeholder: "ContraseÃ±a..." %>
            </div>
          </div>

          <div class="form-group">
             <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-user bigicon"></i></span>
            <div class="col-md-8">
              <%= form.submit "Log in", class: "btn btn-primary" %>
            </div>
          </div>

        </fieldset>
      </div>
    </div>
  </div>
</div>
<%end%>
</center>


